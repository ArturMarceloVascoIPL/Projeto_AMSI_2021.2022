<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitworkout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitWorkout">
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".views.LoginActivity"
            android:name=".views.ActivityChat"
            android:exported="false"
            android:label="Chat"
            android:parentActivityName=".views.MainMenuActivity" />
        <activity
            android:name=".views.ActivityExercises"
            android:exported="false"
            android:label="Lista de Exercicios"
            android:parentActivityName=".views.MainMenuActivity" />
        <activity
            android:name=".views.ActivityOrders"
            android:exported="false"
            android:label="Encomendas"
            android:parentActivityName=".views.MainMenuActivity" />
        <activity
            android:name=".views.ActivityAccountSettings"
            android:exported="false"
            android:label="Definições"
            android:parentActivityName=".views.MainMenuActivity" />
        <activity
            android:name=".views.MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
