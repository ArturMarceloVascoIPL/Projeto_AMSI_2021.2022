<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitworkout">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.FitWorkout">

        <activity
            android:name=".views.client.ActivityChat"
            android:exported="false"
            android:label="Chat"
            android:parentActivityName=".views.client.MainMenuActivity" />
        <activity
            android:name=".views.client.ActivityExercises"
            android:exported="false"
            android:label="Lista de Exercicios"
            android:parentActivityName=".views.client.MainMenuActivity" />
        <activity
            android:name=".views.client.ActivityOrders"
            android:exported="false"
            android:label="Encomendas"
            android:parentActivityName=".views.client.MainMenuActivity" />
        <activity
            android:name=".views.client.ActivityAccountSettings"
            android:exported="false"
            android:label="Definições"
            android:parentActivityName=".views.client.MainMenuActivity" />

        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.client.MainMenuActivity"
            android:exported="false" />

    </application>

</manifest>
